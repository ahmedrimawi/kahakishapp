<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.TransparentTheme">

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="TextAppearance">LabelText</style>

    <style name="TextAppearance.Design">LabelText2</style>

    <style name="TextAppearance.Design.Hint">LabelText3</style>

    <style name="MyActionBar" parent="Theme.AppCompat.Light.ActionBar">
        <item name="android:background">@color/actionBar</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/actionBar</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>